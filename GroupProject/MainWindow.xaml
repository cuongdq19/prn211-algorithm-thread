        <Label Content="Async" FontSize="20" HorizontalAlignment="Left" Margin="24,7,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Sync" FontSize="20" HorizontalAlignment="Left" Margin="515,17,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Algorithm" x:Name="lbAlgorithm" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="86,177,0,0" VerticalAlignment="Top"/>
        <Label Content="Bubble Sort" HorizontalAlignment="Left" Margin="92,226,0,0" VerticalAlignment="Top"/>
        <Label Content="Selection Sort" HorizontalAlignment="Left" Margin="92,265,0,0" VerticalAlignment="Top"/>
        <Label Content="Quick Sort" HorizontalAlignment="Left" Margin="92,339,0,0" VerticalAlignment="Top"/>
        <Label Content="Shell Sort" HorizontalAlignment="Left" Margin="94,377,0,0" VerticalAlignment="Top"/>
        <Label Content="Merge sort" HorizontalAlignment="Left" Margin="92,303,0,0" VerticalAlignment="Top"/>
        <Label Content="Total Time" HorizontalAlignment="Left" Margin="92,417,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.423,0.495"/>
        <TextBlock HorizontalAlignment="Left" x:Name="txtBubbleSort" Margin="209,231,0,0" TextWrapping="Wrap" TextAlignment="Right" Text="0s" VerticalAlignment="Top" Width="50"/>
        <TextBlock HorizontalAlignment="Left" x:Name="txtSelectionSort" Margin="209,270,0,0" TextWrapping="Wrap" TextAlignment="Right" Text="0s" VerticalAlignment="Top" Width="50"/>
        <TextBlock HorizontalAlignment="Left" x:Name="txtMergeSort" Margin="209,308,0,0" TextWrapping="Wrap" TextAlignment="Right" Text="0s" VerticalAlignment="Top" Width="50"/>
        <TextBlock HorizontalAlignment="Left" x:Name="txtQuickSort" Margin="209,344,0,0" TextWrapping="Wrap" TextAlignment="Right" Text="0s" VerticalAlignment="Top" Width="50"/>
        <TextBlock HorizontalAlignment="Left" x:Name="txtShellSort" Margin="209,382,0,0" TextWrapping="Wrap" TextAlignment="Right" Text="0s" VerticalAlignment="Top" Width="50"/>
        <TextBlock HorizontalAlignment="Left" x:Name="txtTotal" Margin="209,422,0,0" TextWrapping="Wrap" TextAlignment="Right" Text="0s" VerticalAlignment="Top" Width="50"/>
        
